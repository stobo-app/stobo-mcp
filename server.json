    "source": "github"
  },
  "version": "0.4.3",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "stobo-mcp",
      "version": "0.4.3",
      "runtimeHint": "uvx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "STOBO_API_KEY",
          "description": "API key from trystobo.com (optional â€” free tools work without it)",
          "isRequired": false,
          "isSecret": true
